{
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "Bot automático Whatsapp",
    "description": "Primeiro teste de extensão",
    "author": "João Paulo M. Ragazzo",
    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_title": "Bot de Whatsapp",
        "default_popup": "index.html"
    },
    "permissions":[
        "clipboardWrite",
        "clipboardRead"
    ],
    "host_permissions":[
        "<all_urls>"
    ]

}